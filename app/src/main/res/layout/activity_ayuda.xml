<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#fff"
    tools:context=".Ayuda">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:padding="15dp"
            android:src="@drawable/logo_istloja"></ImageView>
    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:padding="1dp">

            <Button
                android:id="@+id/btn_inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#5783bc"
                android:text="Inicio"
                android:layout_margin="2dp"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />

            <Button
                android:id="@+id/institucion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Institucion"
                android:background="#5783bc"
                android:textColor="#FFFFFF"
                android:layout_margin="2dp"
                android:textSize="16dp" />
            <Button
                android:id="@+id/google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicanos"
                android:background="#5783bc"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:layout_margin="2dp"
                android:textSize="16dp"/>

            <Button
                android:id="@+id/wikitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Camara"
                android:textColor="#FFFFFF"
                android:background="#5783bc"
                android:layout_margin="2dp"
                android:textSize="16dp" />

            <Button
                android:id="@+id/help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Ayuda"
                android:background="#02385F"
                android:layout_margin="2dp"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="504dp"
        android:layout_marginTop="15dp"
        android:background="#77B9D2F1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:lineSpacingExtra="8sp"
                android:padding="15dp"
                android:text="Bienvenido a la aplicación móvil del instituto superior tecnológico Loja, en esta aplicación podrás encontrar todos los artículos relacionados con la institución, tales como sus docentes, sus noticiositas, ubicación etc.
Además, esta aplicación cuenta con un botón el cual redirecciona a una ventana donde se podrá visualizar una sección de realidad aumentada, el cual esta enfocada en ayudar al usuario a conocer más el instituto aclarando alguno de las dudas que se puedan presentar, además el usuario podrá conocer el lugar exacto donde se encuentra ubicado las instalaciones del instituto.
"
                android:textColor="#000"
                android:textSize="15dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="15dp"
                android:text="¿Como utilizar la seccion de realidad aumenta?"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/ayudaimagen" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:text="En esta parte de la aplicación cuando hacemos click en el botón de cámara, nos habilitara junto con la herramienta de wikitude la cámara la cual escanea una imagen y se puede observar el significado de la misma."
                android:textColor="#000"></TextView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp">
        <ImageButton
            android:id="@+id/regresar"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="#02385F"
            android:src="@drawable/regresar"
            android:textColor="#FFFFFF" />
    </LinearLayout>


</LinearLayout>